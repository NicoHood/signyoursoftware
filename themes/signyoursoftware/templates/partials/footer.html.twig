{% set footer_page = page.find('/modules/footer') %}
{% set footer_content = footer_page.content %}
{% set footer_image = media[theme_var('footer_image')] %}

<footer id="footer" class="{{ footer_page.header.class }}" role="contentinfo">
    {{ footer_image.derivatives([30, 60, 90]).sizes('30px').html(null, null, 'mark')|raw }}
    {{ footer_content|raw }}
</footer>
